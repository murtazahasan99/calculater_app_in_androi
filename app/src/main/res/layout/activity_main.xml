<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/barckInpt"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/barckInpt"
        android:gravity="right"
        android:paddingTop="10pt"
        android:paddingRight="4pt"
        android:paddingBottom="6pt"
        android:text=""
        android:textColor="@color/white"
        android:textSize="36sp"
        tools:ignore="DuplicateIds" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/barckInpt"
        android:gravity="right"
        android:paddingTop="10pt"
        android:paddingRight="4pt"
        android:paddingBottom="6pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clear"
                android:text="A/C"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button--"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="revers"
                android:text="+/-"
                android:textSize="19sp" />

            <Button
                android:id="@+id/buttonMod"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="Mod"
                android:onClick="clickOp"
                android:textSize="19sp" />

            <Button
                android:id="@+id/buttonFac"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="clickOp"
                android:text="!"
                android:textColor="@color/white"
                android:textSize="19sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clickNum"
                android:text="7"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clickNum"
                android:text="8"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clickNum"
                android:text="9"
                android:textSize="19sp" />

            <Button
                android:id="@+id/buttonMult"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="clickOp"
                android:text="Pow"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clickNum"
                android:text="4"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clickNum"
                android:text="5"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clickNum"
                android:text="6"
                android:textSize="19sp" />

            <Button
                android:id="@+id/buttonGcd"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="clickOp"
                android:text="gcd"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clickNum"
                android:text="1"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clickNum"
                android:text="2"
                android:textSize="19sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clickNum"
                android:text="3"
                android:textSize="19sp" />

            <Button
                android:id="@+id/buttonLcm"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="clickOp"
                android:text="Lcm"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="75pt"
            android:layout_height="30pt"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="1pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:onClick="clickNum"
            android:text="0"
            android:textSize="19sp" />

        <Button
            android:id="@+id/buttonDout"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="1pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:onClick="clickNum"
            android:text="."
            android:textSize="19sp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="1pt"
            android:layout_weight="1"
            android:background="@color/orange"
            android:onClick="clickEqual"
            android:text="="
            android:textColor="@color/white"
            android:textSize="19sp" />
    </LinearLayout>

</LinearLayout>